{
  "model": {
    "type": "xlm_roberta",
    "model_name": "xlm-roberta-base",
    "max_length": 512,
    "dropout": 0.1
  },
  "data": {
    "stride": 256,
    "window_pooling": "mean",
    "test_size": 0.15,
    "val_size": 0.15,
    "random_state": 42,
    "use_class_weights": true,
    "use_minority_oversampling": true,
    "minority_threshold": 200,
    "oversample_factor": 3
  },
  "training": {
    "batch_size": 8,
    "learning_rate": 5e-5,
    "num_epochs": 10,
    "warmup_ratio": 0.1,
    "weight_decay": 0.01,
    "gradient_accumulation_steps": 4,
    "max_grad_norm": 1.0,
    "monitor_metric": "macro_f1"
  },
  "unknown_detection": {
    "enabled": true,
    "use_confidence_threshold": true,
    "use_centroid_distance": true,
    "confidence_threshold": 0.6,
    "distance_threshold_percentile": 95,
    "unknown_logic": "OR"
  }
}